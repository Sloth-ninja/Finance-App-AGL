        }
    };
    
    const matter = matterData[matterId];
    if (matter) {
        document.getElementById('matter-name').textContent = matter.name;
        document.getElementById('matter-details').textContent = matter.details;
        document.getElementById('matter-modal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }
}

function closeMatterModal() {
    document.getElementById('matter-modal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

