<script>
// Initialize Lucide icons
lucide.createIcons();

// Tab switching functionality
function switchTab(tabName) {
    const invoicesTab = document.getElementById('invoices-tab');
    const payrunTab = document.getElementById('payrun-history-tab');
    
    if (tabName === 'invoices') {
        invoicesTab.className = 'tab-active px-6 py-3 rounded-xl font-medium transition-all duration-300 flex items-center space-x-2';
        payrunTab.className = 'tab-inactive px-6 py-3 rounded-xl font-medium transition-all duration-300 flex items-center space-x-2';
    } else {
        invoicesTab.className = 'tab-inactive px-6 py-3 rounded-xl font-medium transition-all duration-300 flex items-center space-x-2';
        payrunTab.className = 'tab-active px-6 py-3 rounded-xl font-medium transition-all duration-300 flex items-center space-x-2';
    }
}

// Pay Run Modal Functions
function openPayRunModal(payRunId) {
    document.getElementById('payrun-modal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closePayRunModal() {
    document.getElementById('payrun-modal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

// Client Modal Functions
function openClientQuickView(event, clientId) {
    event.stopPropagation();
    event.preventDefault();
    
    const clientData = {
        'acme-corp': {
            name: 'Acme Corporation',
            type: 'Technology • Fortune 500',
            avatar: 'AC',
            avatarColor: 'from-blue-500 to-indigo-500',
            ytdBilling: '$324,750',
            activeMatters: '3'
        },
        'techcorp': {
            name: 'TechCorp Industries',
            type: 'Manufacturing • Public Company',
            avatar: 'TC',
            avatarColor: 'from-green-500 to-emerald-500',
            ytdBilling: '$189,200',
            activeMatters: '2'
        },
        'global-health': {
            name: 'Global Health Partners',
            type: 'Healthcare • Private Equity',
            avatar: 'GH',
            avatarColor: 'from-purple-500 to-pink-500',
            ytdBilling: '$156,800',
            activeMatters: '1'
        },
        'finserv': {
            name: 'Financial Services LLC',
            type: 'Financial Services • Mid-Market',
            avatar: 'FS',
            avatarColor: 'from-orange-500 to-red-500',
            ytdBilling: '$98,450',
            activeMatters: '2'
        }
    };
    
    const client = clientData[clientId];
    if (client) {
        document.getElementById('client-name').textContent = client.name;
        document.getElementById('client-type').textContent = client.type;
        document.getElementById('client-avatar').textContent = client.avatar;
        document.getElementById('client-avatar').className = `w-16 h-16 bg-gradient-to-br ${client.avatarColor} rounded-xl flex items-center justify-center text-white font-semibold text-lg`;
        document.getElementById('client-modal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }
}

function closeClientModal() {
    document.getElementById('client-modal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

// Matter Modal Functions
