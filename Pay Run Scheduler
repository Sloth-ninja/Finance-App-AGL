let selectedInvoices = new Set();
let currentTab = 'ready';

// Initialize the application
document.addEventListener('DOMContentLoaded', function() {
    lucide.createIcons();
    loadReadyInvoices();
    loadScheduledPayRuns();
    loadPayRunHistory();
    loadFinanceHistory();
    
    // Set default date for payment scheduling
    const tomorrow = new Date();
    tomorrow.setDate(tomorrow.getDate() + 1);
    document.getElementById('paymentDate').value = tomorrow.toISOString().split('T')[0];
});

// Tab switching functionality
function switchTab(tabName) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.add('hidden');
        content.classList.remove('opacity-0', 'animate-fade-in-up');
    });
    
    // Remove active class from all tabs
    document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    
    // Show selected tab content
    const selectedTab = document.getElementById(tabName + 'Tab');
    if (selectedTab) {
        selectedTab.classList.remove('hidden');
        setTimeout(() => {
            selectedTab.classList.add('opacity-0', 'animate-fade-in-up');
            selectedTab.classList.remove('opacity-0');
        }, 10);
    }
    
    // Add active class to selected tab
    const selectedButton = document.querySelector(`[data-tab="${tabName}"]`);
    if (selectedButton) {
        selectedButton.classList.add('active');
    }
    
    currentTab = tabName;
}

// Load ready invoices
function loadReadyInvoices() {
    const tbody = document.getElementById('readyInvoicesTableBody');
    tbody.innerHTML = '';
    
    mockReadyInvoices.forEach((invoice, index) => {
        const row = document.createElement('tr');
        row.className = 'invoice-row';
        row.innerHTML = `
            <td class="px-4 py-4">
                <input type="checkbox" class="form-checkbox h-4 w-4 text-indigo-600 rounded border-gray-300" 
                       onchange="toggleInvoiceSelection('${invoice.id}')" id="checkbox-${invoice.id}">
            </td>
            <td class="px-4 py-4">
                <div class="font-medium text-gray-900">${invoice.id}</div>
            </td>
            <td class="px-4 py-4">
                <div class="font-medium text-gray-900">${invoice.partner}</div>
            </td>
            <td class="px-4 py-4">
                <div class="text-gray-900">${invoice.client}</div>
            </td>
            <td class="px-4 py-4">
                <div class="font-semibold text-green-600">$${invoice.amount.toLocaleString()}</div>
            </td>
            <td class="px-4 py-4">
                <div class="text-gray-600">${new Date(invoice.approvedDate).toLocaleDateString()}</div>
            </td>
            <td class="px-4 py-4">
                <div class="text-gray-600">${new Date(invoice.clientPaidDate).toLocaleDateString()}</div>
            </td>
            <td class="px-4 py-4">
                <span class="px-3 py-1 rounded-full text-sm font-medium ${invoice.daysReady > 5 ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700'}">
                    ${invoice.daysReady} days
                </span>
            </td>
        `;
        tbody.appendChild(row);
    });
}

// Load scheduled pay runs
function loadScheduledPayRuns() {
    const container = document.getElementById('scheduledPayRuns');
    container.innerHTML = '';
    
    mockScheduledPayRuns.forEach(payRun => {
        const card = document.createElement('div');
        card.className = 'payrun-card glass-effect rounded-2xl p-6 shadow-lg border border-white/20';
        card.innerHTML = `
            <div class="flex items-center justify-between mb-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">${payRun.id}</h3>
                    <p class="text-sm text-gray-500">Created by ${payRun.createdBy}</p>
                </div>
                <span class="px-3 py-1 rounded-full text-sm font-medium status-${payRun.status}">
                    ${payRun.status.charAt(0).toUpperCase() + payRun.status.slice(1)}
                </span>
            </div>
            
            <div class="grid grid-cols-3 gap-4 mb-4">
                <div>
                    <div class="text-sm text-gray-500">Scheduled Date</div>
                    <div class="font-semibold text-gray-900">${new Date(payRun.scheduledDate).toLocaleDateString()}</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Invoices</div>
                    <div class="font-semibold text-gray-900">${payRun.invoiceCount}</div>
                </div>
                <div>
                    <div class="text-sm text-gray-500">Total Amount</div>
                    <div class="font-semibold text-green-600">$${payRun.totalAmount.toLocaleString()}</div>
                </div>
            </div>
            
            <div class="mb-4">
                <div class="text-sm text-gray-500 mb-1">Notes</div>
                <div class="text-sm text-gray-700">${payRun.notes}</div>
            </div>
            
            <div class="flex justify-end space-x-3">
                <button onclick="viewPayRunDetails('${payRun.id}')" class="px-4 py-2 bg-white text-gray-700 rounded-xl hover:bg-gray-50 transition-colors duration-300 flex items-center space-x-2 shadow-sm border">
                    <i data-lucide="eye" class="w-4 h-4" style="stroke-width: 1.5;"></i>
                    <span>View Details</span>
                </button>
                ${payRun.status === 'ready' ? `
                    <button onclick="executePayRun('${payRun.id}')" class="complete-btn px-4 py-2 rounded-xl flex items-center space-x-2 shadow-lg">
                        <i data-lucide="play" class="w-4 h-4" style="stroke-width: 1.5;"></i>
                        <span>Execute</span>
                    </button>
                ` : ''}
            </div>
        `;
        container.appendChild(card);
    });
}

