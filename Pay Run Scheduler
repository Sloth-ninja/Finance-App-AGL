}

// Utility functions
function refreshData() {
    loadReadyInvoices();
    loadScheduledPayRuns();
    loadPayRunHistory();
    loadFinanceHistory();
    alert('Data refreshed successfully');
}

function exportPayRunData() {
    alert('Exporting pay run data...');
}

function executePayRun(payRunId) {
    if (confirm(`Are you sure you want to execute pay run ${payRunId}?`)) {
        alert(`Pay run ${payRunId} executed successfully`);
        loadScheduledPayRuns();
        loadPayRunHistory();
    }
}

function downloadPayRunReport(payRunId) {
    alert(`Downloading report for ${payRunId}...`);
}

function viewActionDetails(actionDate) {
    alert(`Viewing details foraction on ${actionDate}...`);
}

// Search and filter functions
function searchReadyInvoices() {
    const searchTerm = document.getElementById('readySearchInput').value.toLowerCase();
    const rows = document.querySelectorAll('#readyInvoicesTableBody tr');
    let visibleCount = 0;
    
    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        if (text.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
        } else {
            row.style.display = 'none';
        }
    });
    
    document.getElementById('filteredReadyCount').textContent = visibleCount;
}

function filterReadyInvoices() {
    const partnerFilter = document.getElementById('partnerFilterReady').value;
    const rows = document.querySelectorAll('#readyInvoicesTableBody tr');
    let visibleCount = 0;
    
    rows.forEach(row => {
        const partnerCell = row.children[2].textContent;
        if (!partnerFilter || partnerCell.includes(partnerFilter)) {
            row.style.display = '';
            visibleCount++;
        } else {
            row.style.display = 'none';
        }
    });
    
    document.getElementById('filteredReadyCount').textContent = visibleCount;
}

function searchFinanceHistory() {
    const searchTerm = document.getElementById('historySearchInput').value.toLowerCase();
    const rows = document.querySelectorAll('#financeHistoryTableBody tr');
    let visibleCount = 0;
    
    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        if (text.includes(searchTerm)) {
            row.style.display = '';
            visibleCount++;
        } else {
            row.style.display = 'none';
        }
    });
    
    document.getElementById('filteredHistoryCount').textContent = visibleCount;
}

function filterFinanceHistory() {
    const actionTypeFilter = document.getElementById('actionTypeFilter').value;
    const operatorFilter = document.getElementById('operatorFilter').value;
    const dateFromFilter = document.getElementById('dateFromFilter').value;
    const dateToFilter = document.getElementById('dateToFilter').value;
    const rows = document.querySelectorAll('#financeHistoryTableBody tr');
    let visibleCount = 0;
    
    rows.forEach(row => {
        let show = true;
        
        // Action type filter
        if (actionTypeFilter) {
            const actionTypeCell = row.children[1].textContent.toLowerCase();
            if (!actionTypeCell.includes(actionTypeFilter)) {
                show = false;
            }
        }
        
        // Operator filter
        if (operatorFilter && show) {
            const operatorCell = row.children[3].textContent;
            if (!operatorCell.includes(operatorFilter)) {
                show = false;
            }
        }
        
        // Date filters
        if ((dateFromFilter || dateToFilter) && show) {
            const dateCell = row.children[0].children[0].textContent;
            const rowDate = new Date(dateCell);
            
            if (dateFromFilter && rowDate < new Date(dateFromFilter)) {
                show = false;
            }
            if (dateToFilter && rowDate > new Date(dateToFilter)) {
                show = false;
            }
        }
        
        if (show) {
            row.style.display = '';
            visibleCount++;
        } else {
            row.style.display = 'none';
        }
    });
    
    document.getElementById('filteredHistoryCount').textContent = visibleCount;
}

function clearFilters() {
    document.getElementById('historySearchInput').value = '';
    document.getElementById('actionTypeFilter').value = '';
    document.getElementById('operatorFilter').value = '';
    document.getElementById('dateFromFilter').value = '';
    document.getElementById('dateToFilter').value = '';
    
    const rows = document.querySelectorAll('#financeHistoryTableBody tr');
    rows.forEach(row => {
        row.style.display = '';
    });
    
    document.getElementById('filteredHistoryCount').textContent = mockFinanceHistory.length;
}

// Animation triggers
setTimeout(() => {
    document.querySelector('aside').classList.remove('opacity-0');
    document.querySelector('header').classList.remove('opacity-0');
    document.querySelector('.animate-fade-in-up.delay-200').classList.remove('opacity-0');
    document.querySelector('.animate-fade-in-up.delay-300').classList.remove('opacity-0');
}, 100);
</script>


</body></html>
