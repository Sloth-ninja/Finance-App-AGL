// Load finance history
function loadFinanceHistory() {
    const tbody = document.getElementById('financeHistoryTableBody');
    tbody.innerHTML = '';
    
    mockFinanceHistory.forEach(action => {
        const row = document.createElement('tr');
        row.className = 'history-row';
        row.innerHTML = `
            <td class="px-4 py-4">
                <div class="font-medium text-gray-900">${new Date(action.date).toLocaleDateString()}</div>
                <div class="text-sm text-gray-500">${new Date(action.date).toLocaleTimeString()}</div>
            </td>
            <td class="px-4 py-4">
                <span class="px-3 py-1 rounded-full text-sm font-medium type-${action.type}">
                    ${action.type.charAt(0).toUpperCase() + action.type.slice(1)}
                </span>
            </td>
            <td class="px-4 py-4">
                <div class="text-gray-900">${action.description}</div>
            </td>
            <td class="px-4 py-4">
                <div class="font-medium text-gray-900">${action.operator}</div>
            </td>
            <td class="px-4 py-4">
                <div class="font-semibold text-gray-900">${action.records}</div>
            </td>
            <td class="px-4 py-4">
                <div class="font-semibold text-green-600">$${action.amount.toLocaleString()}</div>
            </td>
            <td class="px-4 py-4">
                <span class="px-3 py-1 rounded-full text-sm font-medium status-${action.status}">
                    ${action.status.charAt(0).toUpperCase() + action.status.slice(1)}
                </span>
            </td>
            <td class="px-4 py-4">
                <button onclick="viewActionDetails('${action.date}')" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors duration-300 text-sm">
                    Details
                </button>
            </td>
        `;
        tbody.appendChild(row);
    });
}

// Invoice selection functions
function toggleInvoiceSelection(invoiceId) {
    if (selectedInvoices.has(invoiceId)) {
        selectedInvoices.delete(invoiceId);
        document.getElementById(`checkbox-${invoiceId}`).checked = false;
        document.querySelector(`#checkbox-${invoiceId}`).closest('tr').classList.remove('selected');
    } else {
        selectedInvoices.add(invoiceId);
        document.getElementById(`checkbox-${invoiceId}`).checked = true;
        document.querySelector(`#checkbox-${invoiceId}`).closest('tr').classList.add('selected');
    }
    
    updateSelectionUI();
}

function selectAllReady() {
    const checkboxes = document.querySelectorAll('#readyInvoicesTableBody input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
        const invoiceId = checkbox.id.replace('checkbox-', '');
        selectedInvoices.add(invoiceId);
        checkbox.checked = true;
        checkbox.closest('tr').classList.add('selected');
    });
    
    document.getElementById('selectAllReadyCheckbox').checked = true;
    updateSelectionUI();
}

function clearSelection() {
    selectedInvoices.clear();
    const checkboxes = document.querySelectorAll('#readyInvoicesTableBody input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
        checkbox.checked = false;
        checkbox.closest('tr').classList.remove('selected');
    });
    
    document.getElementById('selectAllReadyCheckbox').checked = false;
    updateSelectionUI();
}

function toggleSelectAllReady() {
    const selectAllCheckbox = document.getElementById('selectAllReadyCheckbox');
    if (selectAllCheckbox.checked) {
        selectAllReady();
    } else {
        clearSelection();
    }
}

function updateSelectionUI() {
    const count = selectedInvoices.size;
    document.getElementById('selectedCount').textContent = count;
    
    const scheduleBtn = document.getElementById('scheduleBtn');
    if (count > 0) {
        scheduleBtn.disabled = false;
        scheduleBtn.classList.remove('opacity-50');
    } else {
        scheduleBtn.disabled = true;
        scheduleBtn.classList.add('opacity-50');
    }
    
    // Calculate total amount for selected invoices
    let totalAmount = 0;
    selectedInvoices.forEach(invoiceId => {
        const invoice = mockReadyInvoices.find(inv => inv.id === invoiceId);
        if (invoice) {
            totalAmount += invoice.amount;
        }
    });
    
    // Update modal values
    document.getElementById('modalSelectedCount').textContent = count;
    document.getElementById('modalTotalAmount').textContent = `$${totalAmount.toLocaleString()}`;
}

// Modal functions
function schedulePayRun() {
    if (selectedInvoices.size === 0) return;
    
    document.getElementById('scheduleModal').classList.remove('hidden');
    updateSelectionUI();
}

function closeScheduleModal() {
    document.getElementById('scheduleModal').classList.add('hidden');
}

function confirmSchedulePayRun() {
    const paymentDate = document.getElementById('paymentDate').value;
    const notes = document.getElementById('payRunNotes').value;
    
    if (!paymentDate) {
        alert('Please select a payment date');
        return;
    }
    
    // Simulate scheduling
    alert(`Pay run scheduled successfully for ${new Date(paymentDate).toLocaleDateString()} with ${selectedInvoices.size} invoices.`);
    
    clearSelection();
    closeScheduleModal();
    
    // Refresh scheduled pay runs
    loadScheduledPayRuns();
}

function viewPayRunDetails(payRunId) {
    document.getElementById('payRunDetailsModal').classList.remove('hidden');
    document.getElementById('payRunDetailsTitle').textContent = `Pay Run Details - ${payRunId}`;
    
    // Simulate loading details
    const content = document.getElementById('payRunDetailsContent');
    content.innerHTML = `
        <div class="space-y-6">
            <div class="grid grid-cols-2 gap-6">
                <div class="glass-effect rounded-xl p-4">
                    <div class="text-sm text-gray-500 mb-1">Pay Run ID</div>
